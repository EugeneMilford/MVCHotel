@model IEnumerable<HotelManagement.Models.PlayArea>

<!-- Hero Section -->
<div class="carousel-header">
    <div class="hero-content" style="position:relative; min-height: 80vh;">
        <img src="~/img/kids/kids_hero.jpeg" class="img-fluid" alt="Hotel Kids Play Area" style="width:100%; height:100%; object-fit:cover;">
        <div class="carousel-caption" style="position:absolute; top:0; left:0; width:100%; height:100%; display:flex; align-items:center; justify-content:center; text-align:center; background: linear-gradient(rgba(0, 0, 0, .6), rgba(0, 0, 0, 0.6));">
            <div class="text-center p-4" style="max-width: 900px;">
                <h4 class="text-white text-uppercase fw-bold mb-3 mb-md-4 wow fadeInUp" data-wow-delay="0.1s">Kids' Play Area</h4>
                <h1 class="display-1 text-capitalize text-white mb-3 mb-md-4 wow fadeInUp" data-wow-delay="0.3s">Fun Awaits for Your Little Ones</h1>
                <p class="text-white mb-4 mb-md-5 fs-5 wow fadeInUp" data-wow-delay="0.5s">Let them unleash their creativity and energy in a safe environment.</p>
            </div>
        </div>
    </div>
</div>

<!-- Table and Opening Hours -->
<div class="container section_gap">
    <div>
        <h4>Your Bookings</h4>
    </div>
    <div class="row">
        <div class="col-8 section-top-border">
            <div class="table-responsive bg-white">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.GuardianName)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.BookingTime)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.NumberOfChildren)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Confirmed)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GuardianName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookingTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberOfChildren)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Confirmed)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PlayAreaID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.PlayAreaID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.PlayAreaID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <p>
                <a class="theme-button" asp-action="Create">Add New</a>
            </p>
        </div>
        <div class="col-4">
            <div class="opening-hours-widget mt-50">
                <h6>Opening Hours</h6>
                <ul class="opening-hours">
                    <li>
                        <p>Monday</p>
                        <p>8 AM - 8 PM</p>
                    </li>
                    <li>
                        <p>Tuesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Wednesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Thursday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Friday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Saturday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Sunday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Services Start -->
