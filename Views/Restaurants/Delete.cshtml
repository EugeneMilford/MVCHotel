@model HotelManagement.Models.Restaurant

<!-- Delete -->
<div class="amazing-deals">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Delete</h2>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 mx-auto">
                <div class="item">
                    <div class="container">
                        <div class="row">
                            <div class="align-self-center">
                                <div class="content">
                                    <h4>Restaurant Booking</h4>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.CustomerName) : @Html.DisplayFor(model => model.CustomerName)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.BookingTime) : @Html.DisplayFor(model => model.BookingTime)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.NumberOfGuests) : @Html.DisplayFor(model => model.NumberOfGuests)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.Confirmed) : @Html.DisplayFor(model => model.Confirmed)
                                        </span>
                                    </div>
                                    <p>Are you sure you want to delete this reservation?</p>

                                    <div class="row">
                                        <div class="col-8 mx-auto">
                                            <div class="d-flex align-items-center">
                                                <form asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@Model.RestaurantID" />
                                                    <button type="submit" class="tertiary-button">Delete Booking</button>
                                                </form>
                                                <a asp-action="Index" class="secondary-button">Back to Restaurants</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
