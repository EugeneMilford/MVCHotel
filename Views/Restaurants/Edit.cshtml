@model HotelManagement.Models.Restaurant

<!-- Update -->
<div class="reservation-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Edit</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <form id="reservation-form" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="RestaurantID" />
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>Edit Your <em>Reservation</em> Through This <em>Form</em></h4>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="CustomerName" class="form-label">Customer Name</label>
                                <input asp-for="CustomerName" class="form-control" autocomplete="on" required />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BookingTime" class="form-label">Booking Time</label>
                                <input asp-for="BookingTime" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="BookingTime" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="NumberOfGuests" class="form-label">Number of Guests</label>
                                <input asp-for="NumberOfGuests" type="number" class="form-control" required />
                                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="Confirmed" class="form-label">Confirmed</label>
                                <input asp-for="Confirmed" type="checkbox" class="form-check-input" />
                                <span asp-validation-for="Confirmed" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <button type="submit" class="tertiary-button">Edit Reservation</button>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <a asp-action="Index" class="secondary-button">Back to Restaurants</a>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

