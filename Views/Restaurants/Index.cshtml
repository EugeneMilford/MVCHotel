@model IEnumerable<HotelManagement.Models.Restaurant>

<!-- Hero Section -->
<div class="page-heading restaurant-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4>Our Restaurant</h4>
                <h2>Delight your senses with a culinary journey</h2>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="container section_gap">
    <div>
        <h4>Your Bookings</h4>
    </div>
    <div class="row">
        <div class="col-8 section-top-border">
            <div class="table-responsive bg-white">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.CustomerName)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.BookingTime)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.NumberOfGuests)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Confirmed)</th>
                        </tr>
                    </thead>
                    <tbody>               
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookingTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumberOfGuests)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Confirmed)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.RestaurantID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.RestaurantID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.RestaurantID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <p>
                <a class="theme-button" asp-action="Create">Add New</a>
            </p>
        </div>
        <div class="col-4">
            <div class="opening-hours-widget mt-50">
                <h6>Opening Hours</h6>
                <ul class="opening-hours">
                    <li>
                        <p>Monday</p>
                        <p>8 AM - 8 PM</p>
                    </li>
                    <li>
                        <p>Tuesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Wednesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Thursday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Friday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Saturday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Sunday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                </ul>
            </div>
            </div>
    </div>
</div>

<!-- Services Start -->
<div class="container-fluid bg-light service py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Services</h5>
            <h1 class="mb-0">Our Services</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center bg-white border border-primary rounded p-4 pe-0">
                            <div class="service-content text-end">
                                <h5 class="mb-4">Gourmet Dining Experience</h5>
                                <p class="mb-0">
                                    At our hotel restaurant, we pride ourselves on offering a gourmet dining experience that caters to the discerning tastes of our guests. Our menu features a diverse 
                                    selection of culinary delights, meticulously crafted by our team of skilled chefs
                                </p>
                            </div>
                            <div class="service-icon p-4">
                                <i class="fa fa-globe fa-4x text-primary"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center  bg-white border border-primary rounded p-4 pe-0">
                            <div class="service-content text-end">
                                <h5 class="mb-4">Exquisite Ambiance</h5>
                                <p class="mb-0">
                                    The ambiance of our restaurant is designed to provide a serene and elegant dining atmosphere. Whether you are enjoying a romantic dinner, a family celebration, or a business 
                                    lunch, our sophisticated interior, adorned with tasteful decor and ambient lighting, sets the perfect scene
                                </p>
                            </div>
                            <div class="service-icon p-4">
                                <i class="fa fa-hotel fa-4x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center bg-white border border-primary rounded p-4 ps-0">
                            <div class="service-icon p-4">
                                <i class="fa fa-globe fa-4x text-primary"></i>
                            </div>
                            <div class="service-content">
                                <h5 class="mb-4">Exceptional Wine and Beverage Selection</h5>
                                <p class="mb-0">
                                    Complementing our exquisite cuisine is an extensive wine and beverage list that features selections from renowned vineyards and distilleries around the globe. Our sommelier is on hand to 
                                    assist you in choosing the perfect wine pairing for your meal, enhancing culinary experience
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center bg-white border border-primary rounded p-4 ps-0">
                            <div class="service-icon p-4">
                                <i class="fa fa-hotel fa-4x text-primary"></i>
                            </div>
                            <div class="service-content">
                                <h5 class="mb-4">Exclusive Dining Services</h5>
                                <p class="mb-0">
                                    Our restaurant offers exclusive services to cater to the unique needs of our guests. For those seeking a more intimate experience, we provide private dining rooms that offer a secluded and 
                                    personalized setting for special occasions or business meetings
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Menu Section-->
<section id="menu" class="menu section-gap">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Menu</h2>
            <p>Check Our Tasty Menu</p>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/calamari.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Crispy Calamari</a>
                </div>
                <div class="menu-ingredients">
                    Tender calamari rings lightly battered and fried until golden brown, served with marinara sauce and lemon aioli
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-starters">
                <img src="~/img/restaurant/garlic-prawns.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Garlic Prawns</a>
                </div>
                <div class="menu-ingredients">
                    Succulent prawns sautéed in a rich garlic butter sauce, served with a slice of lemon and fresh parsley
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/bruschetta.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Bruschetta</a>
                </div>
                <div class="menu-ingredients">
                    Grilled slices of Italian bread topped with a mix of diced tomatoes, basil, garlic, and olive oil
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-starters">
                <img src="~/img/restaurant/caesar-salad.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Caesar Salad</a>
                </div>
                <div class="menu-ingredients">
                    Crisp romaine lettuce tossed with creamy Caesar dressing, croutons, and freshly grated Parmesan cheese, 
                    topped with grilled chicken
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-salads">
                <img src="~/img/restaurant/caprese-salad.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Caprese Salad</a>
                </div>
                <div class="menu-ingredients">
                    A delightful mix of fresh mozzarella, ripe tomatoes, and basil leaves, drizzled with balsamic glaze and 
                    extra virgin olive oil
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/tomato-basil-soup.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Tomato Basil Soup</a>
                </div>
                <div class="menu-ingredients">
                    A warm, comforting soup made from ripe tomatoes and fresh basil, garnished with a swirl of cream and 
                    served with a side of garlic bread
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-starters">
                <img src="~/img/restaurant/minestrone-soup.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Minestrone Soup</a>
                </div>
                <div class="menu-ingredients">
                    A hearty Italian vegetable soup filled with beans, pasta, and seasonal vegetables in a savory 
                    tomato broth
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-salads">
                <img src="~/img/restaurant/grilled-ribeye-steak.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Grilled Ribeye Steak</a>
                </div>
                <div class="menu-ingredients">
                    A juicy ribeye steak grilled to perfection, served with garlic mashed potatoes, steamed asparagus, 
                    and a red wine reduction sauce
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-salads">
                <img src="~/img/restaurant/pan-seared-salmon.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Pan-Seared Salmon</a>
                </div>
                <div class="menu-ingredients">
                    Fresh salmon fillet pan-seared and served with a lemon dill sauce, accompanied by wild rice and 
                    sautéed spinach
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/fettuccine-alfredo.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Fettuccine Alfredo</a>
                </div>
                <div class="menu-ingredients">
                    Fettuccine pasta in a rich, creamy Alfredo sauce, topped with grilled chicken and freshly grated 
                    Parmesan cheese
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/spaghetti-carbonara.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Spaghetti Carbonara</a>
                </div>
                <div class="menu-ingredients">
                    Classic spaghetti tossed with crispy pancetta, eggs, Parmesan cheese, and a touch of black pepper
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/margherita-pizza.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Margherita Pizza</a>
                </div>
                <div class="menu-ingredients">
                    A traditional Italian pizza topped with fresh tomatoes, mozzarella cheese, basil leaves, and a 
                    drizzle of olive oil
                </div>
            </div>

            <div class="col-lg-6 menu-item filter-specialty">
                <img src="~/img/restaurant/chocolate-lava-cake.jpg" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">Chocolate Lava Cake</a>
                </div>
                <div class="menu-ingredients">
                    Rich chocolate cake with a molten center, served warm with vanilla bean ice cream and 
