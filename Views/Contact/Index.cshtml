@model HotelManagement.Models.Contact

<div class="container-fluid contact-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Contact Us</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active text-primary">Contact</li>
        </ol>
    </div>
</div>

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="row justify-content-center g-5">
            <!-- Get in Touch Section -->
            <div class="col-12 col-lg-6">
                <div>
                    <h4 class="text-primary">Get in Touch</h4>
                    <p>Please fill out the form below to contact us. We will get back to you as soon as possible.</p>
                </div>
                <div class="row g-4 pt-5">
                    <div class="col-md-6">
                        <div class="contact-add-item rounded bg-light p-4">
                            <div class="contact-icon text-primary mb-4">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                            <h4>Address</h4>
                            <p class="mb-0">123 Hotel St, Cape Town</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-add-item rounded bg-light p-4">
                            <div class="contact-icon text-primary mb-4">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <h4>Mail Us</h4>
                            <p class="mb-0">info@hotel.com</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-add-item rounded bg-light p-4">
                            <div class="contact-icon text-primary mb-4">
                                <i class="fa fa-phone-alt fa-2x"></i>
                            </div>
                            <h4>Telephone</h4>
                            <p class="mb-0">+123 456 7890</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-add-item rounded bg-light p-4">
                            <div class="contact-icon text-primary mb-4">
                                <i class="fab fa-firefox-browser fa-2x"></i>
                            </div>
                            <h4>Website</h4>
                            <p class="mb-0">www.yoursite.com</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-flex justify-content-around bg-light rounded p-4">
                            <a class="btn btn-xl-square btn-primary rounded-circle" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-xl-square btn-primary rounded-circle" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-xl-square btn-primary rounded-circle" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-xl-square btn-primary rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form Section -->
            <div class="col-12 col-lg-6">
                <!-- Informative Sentences Above the Contact Form -->
                <div class="mb-4">
                    <p>Reach us at Grand Horizon Hotel by phone at +123 456 7890 or email us at info@hotel.com for any inquiries or assistance.</p>
                </div>
                <div class="mb-4">
                    <p>Visit us at 123 Hotel St, Cape Town, conveniently located near popular attractions and public transportation.</p>
                </div>
                <div class="mb-4">
                    <p>Our customer service team is available 24/7 to help with bookings, special requests, or any other needs you may have.</p>
                </div>
                <!-- Contact Form -->
                <form asp-action="Contact" method="post">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Your Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Your Email</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Message" class="form-label">Your Message</label>
                                <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="theme-button">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

