@model HotelManagement.Models.Activities

<!-- Create -->
<div class="reservation-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Create</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <form id="reservation-form" asp-action="Create">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>Book Your <em>Activity</em> Through This <em>Form</em></h4>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="GuestName" class="form-label">Guest Name</label>
                                <input asp-for="GuestName" class="form-control" autocomplete="on" required />
                                <span asp-validation-for="GuestName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="NumberofPeople" class="form-label">Number of People</label>
                                <input asp-for="NumberofPeople" type="number" class="form-control" required />
                                <span asp-validation-for="NumberofPeople" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BookingTime" class="form-label">Booking Time</label>
                                <input asp-for="BookingTime" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="BookingTime" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="chooseActivity" class="form-label">Activity</label>
                                <select asp-for="ActivityName" name="ActivityName" class="form-select" aria-label="Default select example" id="chooseActivity" onChange="this.form.click()">
                                    <option type="checkbox" name="option1" value="Fishing">Fishing</option>
                                    <option value="Picnic">Picnic</option>
                                    <option value="Canoeing">Canoeing</option>
                                    <option value="Golfing">Golfing</option>
                                    <option value="Yoga">Yoga</option>
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="Confirmed" class="form-label">Confirmed</label>
                                <input asp-for="Confirmed" type="checkbox" class="form-check-input" />
                                <span asp-validation-for="Confirmed" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <fieldset>
                                    <button type="submit" class="tertiary-button">Make a Reservation</button>
                                </fieldset>
                            </div>
                            <div class="col-lg-6">
                                <fieldset>
                                    <a asp-action="Index" class="secondary-button">Back to Outdoor Activities</a>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

