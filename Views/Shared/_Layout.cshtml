<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="img/favicon.png" type="img/png">
        <title>Hotel Management</title>
        <!-- main css -->
        <link rel="stylesheet" href="~/css/Style.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <!-- Navbar & Hero Start -->
        <div class="container-fluid nav-bar sticky-top px-4 py-2 py-lg-0">
            <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
                <a href="" class="navbar-brand p-0">
                    <h1 class="display-6 text-dark"><i class="fas fa-swimmer text-primary me-3"></i>Hotel</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurant</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Cinemas" asp-action="Index">Cinema</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Retreat" asp-action="Index">Spa</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Outdoors" asp-action="Index">Outdoor Activities</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Kids" asp-action="Index">Kids Play Area</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Blog" asp-action="Index">Blogs</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                    </div>
                </div>
            </nav>
        </div>

    @RenderBody()

        <!-- Footer -->
        <footer class="footer-area section_gap" style="background-color: #262d79; padding: 20px;">
            <div class="container">
                <div class="row footer-bottom d-flex justify-content-between align-items-center">
                    <p class="col-lg-8 col-sm-12 footer-text m-0 text-center">
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved
                    </p>
                </div>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

