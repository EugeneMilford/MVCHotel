@model HotelManagement.Models.Cinema

<!-- Update -->
<div class="reservation-form">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Edit Movie Ticket</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <form id="reservation-form" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="CinemaID" />
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>Edit Your <em>Movie Ticket</em> Through This <em>Form</em></h4>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="GuestName" class="form-label">Guest Name</label>
                                <input asp-for="GuestName" class="form-control" autocomplete="on" required />
                                <span asp-validation-for="GuestName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BookingTime" class="form-label">Booking Time</label>
                                <input asp-for="BookingTime" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="BookingTime" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="chooseGuests" class="form-label">Movie Title</label>
                                <select asp-for="MovieTitle" name="MovieTitle" class="form-select" aria-label="Default select example" id="chooseMovie" onChange="this.form.click()">
                                    <option type="checkbox" name="option1" value="Kung Fu Panda 4">Kung Fu Panda 4</option>
                                    <option value="Godzilla x Kong">Godzilla x Kong</option>
                                    <option value="Beekeeper">Beekeeper</option>
                                    <option value="Ghostbusters">Ghostbusters</option>
                                </select>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="NumberOfTickets" class="form-label">Number of Tickets</label>
                                <input asp-for="NumberOfTickets" type="number" class="form-control" required />
                                <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="Confirmed" class="form-label">Confirmed</label>
                                <input asp-for="Confirmed" type="checkbox" class="form-check-input" />
                                <span asp-validation-for="Confirmed" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <fieldset>
                                    <button type="submit" class="tertiary-button">Edit Movie Ticket</button>
                                </fieldset>
                            </div>
                            <div class="col-lg-6">
                                <fieldset>
                                    <a asp-action="Index" class="secondary-button">Back to Cinema</a>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
