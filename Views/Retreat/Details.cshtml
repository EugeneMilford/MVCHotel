@model HotelManagement.Models.Spa

<!-- Details -->
<div class="amazing-deals">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading text-center">
                    <h2>Spa Booking Details</h2>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 mx-auto">
                <div class="item">
                    <div class="container">
                        <div class="row">
                            <div class="align-self-center">
                                <div class="content">
                                    <h4>Spa Booking</h4>

                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.SpaCustomerName) : @Html.DisplayFor(model => model.SpaCustomerName)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.BookingDate) : @Html.DisplayFor(model => model.BookingDate)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.StartTime) : @Html.DisplayFor(model => model.StartTime)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.EndTime) : @Html.DisplayFor(model => model.EndTime)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.SpaPackage) : @Html.DisplayFor(model => model.SpaPackage)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.Service) : @Html.DisplayFor(model => model.Service)
                                        </span>
                                    </div>
                                    <div class="col-6">
                                        <span class="list">
                                            @Html.DisplayNameFor(model => model.IsConfirmed) : @Html.DisplayFor(model => model.IsConfirmed)
                                        </span>
                                    </div>
                                    <div class="row">
                                        <div class="col-8 mx-auto">
                                            <div class="d-flex align-items-center">
                                                <a asp-action="Edit" asp-route-id="@Model?.SpaId" class="tertiary-button">Edit</a>
                                                <a asp-action="Index" class="secondary-button">Back to Spa</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
