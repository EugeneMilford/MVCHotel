@model IEnumerable<HotelManagement.Models.Spa>

<!-- Hero Section -->
<div class="page-heading spa-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4>Hotel Spa</h4>
                <h2>Rejuvenate your senses and replenish your spirit</h2>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="container section_gap">
    <div>
        <h4>Your Bookings</h4>
    </div>
    <div class="row">
        <div class="col-8 section-top-border">
            <div class="table-responsive bg-white">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.SpaCustomerName)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.BookingDate)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.StartTime)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.EndTime)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.SpaPackage)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Service)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.IsConfirmed)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpaCustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookingDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpaPackage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Service)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsConfirmed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SpaId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.SpaId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.SpaId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <p>
                <a class="theme-button" asp-action="Create">Add New</a>
            </p>
        </div>
        <div class="col-4">
            <div class="opening-hours-widget mt-50">
                <h6>Opening Hours</h6>
                <ul class="opening-hours">
                    <li>
                        <p>Monday</p>
                        <p>8 AM - 8 PM</p>
                    </li>
                    <li>
                        <p>Tuesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Wednesday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Thursday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Friday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Saturday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                    <li>
                        <p>Sunday</p>
                        <p>9 AM - 1 PM</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Services Start -->
<div class="container-fluid bg-light service py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Services</h5>
            <h1 class="mb-0">Our Services</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center bg-white border border-primary rounded p-4 pe-0">
                            <div class="service-content text-end">
                                <h5 class="mb-4">Holistic Wellness Experience</h5>
                                <p class="mb-0">
                                    Our hotel spa offers a comprehensive wellness experience designed to rejuvenate your mind, body, and spirit. Our extensive range of treatments includes therapeutic massages, revitalizing facials, and 
                                    luxurious body scrubs, each tailored to meet your specific needs
                                </p>
                            </div>
                            <div class="service-icon p-4">
                                <i class="fa fa-globe fa-4x text-primary"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="service-content-inner d-flex align-items-center  bg-white border border-primary rounded p-4 pe-0">
                            <div class="service-content text-end">
                                <h5 class="mb-4">Serene and Luxurious Environment</h5>
                                <p class="mb-0">
                                    The serene ambiance of our spa is meticulously crafted to promote relaxation and well-being. Our modern and elegant facilities feature calming decor, soft lighting, and soothing music, 
